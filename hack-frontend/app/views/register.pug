extends template

block content
    #js-error-message.error-message
    form          
        .form-box(style='text-align:center')
            h2(text-color='white') Register
            .fb-item
                span(text-color='white') Name
                br
                input(type='text' name='name' placeholder='Name')
            .fb-item
                span(text-color='white') Myers-Briggs Type
                br
                input(type='text' name='personality' placeholder='ISFJ')
            .fb-item
                span(text-color='white') Email
                br
                input(type='email' name='email' placeholder='example@gmail.com')
            .fb-item
                span(text-color='white') Password
                br
                input(type='password' name='password' placeholder='******')
            .fb-item
                span(text-color='white') Confirm Password
                br
                input(type='password' name='confirm' placeholder='******') 
            button#submit(type='button' onclick='register()' href='/login') Register

