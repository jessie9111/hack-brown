#submit
    font-family: "Roboto", sans-serif;
    background: white;
    outline: 0; 
    border: none;
    width: 20%;
    border-radius: 15px;
    padding: 15px;
    color: gray;
    font-size: 1.4em;
    -webkit-transition-duration 0.2s // Safari
    transition-duration 0.2s
    
#submit:hover
    opacity 0.6
    //font-size 1.2em
